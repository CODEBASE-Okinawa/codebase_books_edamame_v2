<h1>本一覧</h1>

<ul class="books">
  <% @books.each do |book| %>
    <li>
      <% if book.image.attached? %>
        <%= image_tag book.image, size: 200 %>
      <% else %>
        <%= image_tag 'no_image.jpeg', size: 200 %>
      <% end %>
      <%= link_to book.title, book %>
      <p>ステータスが表示されます</p>
    </li>
  <% end %>
</ul>