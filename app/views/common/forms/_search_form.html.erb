<%= search_form_for @q, url: url_for(action: :index) do |f| %>
  <%= f.search_field :title_cont, placeholder: 'タイトルで検索' , class: "form-control border shadow rounded w-80 h-10 break-words" %>
  <%= f.submit '検索', class: "mt-6 text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5" %>
  <%= f.check_box :available_books, as: :boolean %>
  <%= f.label :available_books, '貸出可能のみ' %>
<% end %>