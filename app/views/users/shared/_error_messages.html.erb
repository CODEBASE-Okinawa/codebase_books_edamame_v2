<% if resource.errors.any? %>
  <div id="error_explanation">
    <%= content_tag(
          :h2,
          I18n.t(
            "errors.messages.not_saved",
            count: resource.errors.count,
            resource: resource.class.model_name.human.downcase
          ),
          class: "flex items-center text-center justify-center h-12 bg-red-300 w-full"
        )
    %>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <%= content_tag(:li, message, class: "flex items-center text-center justify-center h-12 bg-red-300 w-full") %>
      <% end %>
    </ul>
  </div>
<% end %>